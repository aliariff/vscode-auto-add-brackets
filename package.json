{
    "name": "auto-add-brackets",
    "displayName": "Auto Add Brackets in String Interpolation",
    "description": "Automatically add complete brackets when writing interpolated string",
    "version": "0.0.1",
    "publisher": "aliariff",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Keymaps",
        "Formatters",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:ruby",
        "onLanguage:javascript",
        "onLanguage:typescript",
        "onLanguage:coffeescript"
    ],
    "main": "./out/extension",
    "contributes": {
        "keybindings": [{
                "command": "auto.addBracketsHashtag",
                "key": "shift+3",
                "when": "editorTextFocus && editorLangId == 'ruby'"
            },
            {
                "command": "auto.addBracketsHashtag",
                "key": "shift+3",
                "when": "editorTextFocus && editorLangId == 'coffeescript'"
            },
            {
                "command": "auto.addBracketsDollar",
                "key": "shift+4",
                "when": "editorTextFocus && editorLangId == 'javascript'"
            },
            {
                "command": "auto.addBracketsDollar",
                "key": "shift+4",
                "when": "editorTextFocus && editorLangId == 'typescript'"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
